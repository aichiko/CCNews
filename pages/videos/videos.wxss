/* pages/videos/videos.wxss */
.item_view {
    height: 220px;
    border-bottom: 1px solid orange;
}

.cover_view {
    position: relative;
}

.cover_image {
    width: 100em;
    height: auto;
}

.title_view {
    position: absolute;
    left: 10px;
    top: 10px;
    right: 10px;
}
.title_view text {
    color: white
}
.length_view {
    position: absolute;
    right: 10px;
    bottom: 10px;
}
.length_view text {
    color: white
}

.desc_view {
    position: relative;
    left: 0px;
    top: 0px;
    height: 40px;
    vertical-align:middle; 
}

.desc_view image {
    width: 30px;
    height: 30px;
    position: relative;
    left: 10px;
    top: 5px;
    border-radius: 15px;
    float: left
}
.desc_view text {
    position:relative;
    top:10px;
    left: 20px;
}